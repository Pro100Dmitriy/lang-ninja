{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run --allow-net --allow-read --allow-env --unstable main.ts"
    }
  },
  "watcher": {
    "exts": ["js", "jsx", "ts", "tsx", "json"],
    "match": ["**/*.*"],
    "skip": ["*/.git/*", "Dockerfile"],
    "legacy": true
  }
}
